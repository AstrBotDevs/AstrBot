{
  "include": ["vite.config.*"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",    
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "composite": true,
    "allowJs": true,
    "types": ["node"],
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  }
}
